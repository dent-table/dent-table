{
  "productName": "MyOdPlan",
  "artifactName": "${productName}-${version}-${os}.${ext}",
  "buildDependenciesFromSource": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    "!older"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "dist",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "node_modules/@electron/remote",
      "to": "node_modules/@electron/remote",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      },
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "artifactName": "${productName}-${version}-${os}-installer.${ext}"
  },
  "portable": {
    "splashImage": "dist/assets/icons/favicon.512x512.png",
    "artifactName": "${productName}-${version}-${os}-portable.${ext}"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["AppImage"]
  }
}
