{
  "productName": "MyOdPlan",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "extraFiles": [
    "src/assets/preferences.json"
  ],
  "win": {
    "icon": "dist",
    "target": [
      {
        "target": "portable",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "nsis",
        "arch": [
          "x64", "ia32"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
