{
  "productName": "MyOdPlan",
  "buildDependenciesFromSource": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!.github",
    "!.vscode",
    "!.code-workspace",
    "!.npmrc",
    "!*.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!_config.yml",
    "!angular.json",
    "!tsconfig*.json",
    "!tslint.json",
    "!.eslintrc.json",
    "!karma.conf.js",
    "!angular.webpack.js",
    "!*.map",
    "!older/"
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      },
      //      {
      //        "target": "nsis",
      //        "arch": [
      //          "x64"
      //        ]
      //      }
    ]
  },
  "nsis": {
    "oneClick": false
  },
  "portable": {
    "splashImage": "dist/assets/icons/favicon.512x512.png"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["AppImage"]
  }
}
